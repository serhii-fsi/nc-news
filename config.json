{
    "appUrl": {
        "apiV1": "https://be-news-zvlb.onrender.com/api"
    },
    "router": {
        "paths": {
            "home": { "template": "/", "params": [] },
            "topic": { "template": "/topics/:topic", "params": [":topic"] },
            "signin": { "template": "/signin", "params": [] },
            "article": { "template": "/articles/:article_id", "params": [":article_id"] }
        }
    },
    "unstableConnection": {
        "simulate": false,
        "successChance": 0.5,
        "method": "delete",
        "path": "."
    },
    "VoteArticle": {
        "likeBlockingTimeout": 500,
        "errorMsgTimeout": 5000
    },
    "PostComment": {
        "successMsgTimeout": 5000,
        "errorMsgTimeout": 5000,
        "commentHighlightTimeout": 8000
    },
    "Comment": {
        "successMsgTimeout": 5000,
        "errorMsgTimeout": 5000
    }
}
